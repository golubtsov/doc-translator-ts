{
  "name": "doc-translator",
  "type": "module",
  "version": "0.0.4",
  "description": "Паралеллный первеодчик FB2-формат (TypeScript)",
  "main": "./dist/src/index.js",
  "files": [
    "dist"
  ],
  "scripts": {
    "watch": "tsc --watch --project ./",
    "build": "tsc --project ./",
    "test": "jest"
  },
  "author": "Nikita Golubtsov",
  "url": "https://github.com/golubtsov/doc-translator-ts",
  "license": "MIT",
  "dependencies": {
    "fs": "^0.0.1-security"
  },
  "devDependencies": {
    "@types/jest": "^29.5.12",
    "@types/node": "^20.11.20",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.2"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "./tests",
    "testRegex": ".*\\.test\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
