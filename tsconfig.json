{
    "compilerOptions": {
        "target": "ES2022",
        "module": "ES2022",
        "moduleResolution": "Bundler",
        "removeComments": true,
        "outDir": "dist",
        "sourceMap": false,
        "noEmitOnError": true,
        "forceConsistentCasingInFileNames": true,
        "declaration": true
    },
    "include": ["src/**/*.ts"],
    "exclude": [
        "node_modules", 
        "dist", 
        "examples/**/*.ts"
    ]
}